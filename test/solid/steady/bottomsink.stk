material silicon :

   thermal conductivity     1.30e-04 ;
   volumetric heat capacity 1.63566e-12 ;

bottom heat sink :
   heat transfer coefficient 1e-07 ;
   temperature 300.0 ;

dimensions :

  chip length 10000 , width  10000 ;
  cell length    50 , width    200 ;

die bottomdie :

   layer  48 silicon ;
   source  2 silicon ;

die topdie :

   source  2 silicon ;
   layer  48 silicon ;

stack:

   die     die2     topdie    floorplan "four_elements.flp" ;
   die     die1     bottomdie floorplan "background.flp" ;

solver:

  steady ;
  initial temperature 300.0 ;

output:

  T ( die1, 5000, 4800, "solid/steady/node1_bottom.txt", final );
  T ( die2,    0,    0, "solid/steady/node2_bottom.txt", final );
